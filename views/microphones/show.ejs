<%- include('../header.ejs', {name: item.name}) %>


<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="itemTitle"><%= item.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <img src="<%= item.image %>" alt="<%= item.name %> image" class="showImage, img-fluid">
        </div>
        <div class="col-8">
            <p class="brand">Brand: <%= item.brand %></p>
            <p class="itemDescription">Description: <%= item.description %></p>
            <p class="itemPrice">Price: $<%= item.price %>.00</p>
            <a href="/microphones/<%= item._id %>/toCart"><button>Add To Cart</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a href="/microphones/<%= item._id %>/edit"><button type="button" class="btn btn-secondary">Edit</button></a>
            <a href="/microphones/<%= item._id %>/delete"><button type="button" class="btn btn-danger">Delete</button></a>
        </div>
    </div>


<h3><a href="/microphones">Back to Microphones</a></h3>



<%- include('../footer.ejs',) %>